@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li>@Html.ActionLink("Moje konto", "Edit", "User")</li>
            <li>@Html.ActionLink("Wyloguj się", "LogOut", "Account")</li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Regulamin", "Login", "Account")</li>
        <li>@Html.ActionLink("Kontakt", "Login", "Account")</li>
        <li>@Html.ActionLink("Zaloguj się", "Login", "Account")</li>
    </ul>
}
